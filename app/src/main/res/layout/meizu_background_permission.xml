<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/right_top_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/meizu_permission_background_step_1" />

    <LinearLayout
        android:id="@+id/permission_row1"
        android:layout_below="@+id/right_top_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/permission_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="56dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/basic_text_size_4"
            android:text="@string/meizu_permission_background_step_1"
            tools:ignore="DuplicateIds" />

        <ImageView
            android:id="@+id/gesture_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/miui_hand_top"
            tools:ignore="DuplicateIds" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/permission_row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/permission_row1"
        android:layout_marginBottom="30dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/permission_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/basic_text_size_4"
            android:text="@string/meizu_permission_background_step_2"
            tools:ignore="DuplicateIds" />

        <ImageView
            android:id="@+id/permission_img"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/permission_img_margin"
            android:layout_marginRight="@dimen/permission_img_margin"
            android:src="@drawable/meizu_permission_background_step_2"
            tools:ignore="DuplicateIds" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/permission_row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/permission_row2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/permission_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/basic_text_size_4"
            android:text="@string/meizu_permission_background_step_3"
            tools:ignore="DuplicateIds" />

        <ImageView
            android:id="@+id/permission_img"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/permission_img_margin"
            android:layout_marginRight="@dimen/permission_img_margin"
            android:src="@drawable/meizu_permission_background_step_3"
            tools:ignore="DuplicateIds" />

        <ImageView
            android:id="@+id/gesture_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="304dp"
            android:src="@drawable/miui_hand_top"
            tools:ignore="DuplicateIds" />

    </LinearLayout>

</RelativeLayout>