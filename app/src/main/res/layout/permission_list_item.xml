<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/permission_auto_list_height">
    <TextView
        android:id="@+id/list_icon"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="12dp"
        android:layout_gravity="left|center_vertical"
        android:textColor="@color/grey_450"
        android:textSize="@dimen/basic_text_size_1"
        android:text="u"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/list_title"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="left|center_vertical"
                android:textColor="@color/grey_600"
                android:text="来电智能安全防护"
                android:textSize="@dimen/basic_text_size_5_5" />
            <TextView
                android:id="@+id/list_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black_transparency_400"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/basic_text_size_7"
                android:layout_marginRight="18dp"
                android:text="未开启"/>
            <TextView
                android:id="@+id/list_waring"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/red_500"
                android:layout_marginRight="18dp"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/basic_text_size_1"
                android:visibility="gone"
                android:text="3"/>
            <TextView
                android:id="@+id/list_handopen"
                android:layout_height="30dp"
                android:layout_width="72dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/basic_text_size_7"
                android:layout_marginRight="18dp"
                android:visibility="gone"
                android:background="@drawable/permission_auto_handopen_bg"
                android:text="手动开启"/>
        </LinearLayout>
        <TextView
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/black_transparency_100" />
    </LinearLayout>
</LinearLayout>


