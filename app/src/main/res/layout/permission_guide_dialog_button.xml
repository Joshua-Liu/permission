<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/index"
        android:layout_width="@dimen/permission_btn_left_icon_width"
        android:layout_height="@dimen/permission_btn_left_icon_width"
        android:background="@drawable/permission_btn_left_icon"
        android:gravity="center"
        android:layout_marginLeft="@dimen/permission_btn_left_icon_margin_left"
        android:layout_marginRight="@dimen/permission_btn_left_icon_margin_right" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/black_transparency_800" />

        <TextView
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="@color/black_transparency_400"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/icon_container"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/permission_guide_dialog_icon_height"
        android:gravity="center"
        android:layout_marginRight="14dp"
        android:background="@drawable/permission_guide_button_icon">

        <TextView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/permission_btn_textview_padding"
            android:paddingRight="@dimen/permission_btn_textview_padding"
            android:textSize="10dp"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>