<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="48dp"
        android:text="@string/permission_denial_dlg_content"
        android:textColor="@color/dialog_main_color"
        android:textSize="@dimen/basic_text_size_5" />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/miui_dial_sercurity_dlg_btn"
        android:textColor="@color/white"
        android:textSize="@dimen/basic_text_size_5"
        android:background="@drawable/dialog_button_green_bg" />
            
</RelativeLayout>
