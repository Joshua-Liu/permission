<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/light_blue_500"
    android:layout_height="match_parent">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/yellow_400"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="@dimen/basic_text_size_1"
        android:text="@string/permission_auto_proccess_title"/>
     <LinearLayout
         android:layout_marginTop="150dp"
         android:layout_centerHorizontal="true"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:orientation="horizontal">
        <TextView
            android:id="@+id/waiting"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/basic_text_size_4"
            android:text="@string/permission_auto_proccess_desc"/>
         <TextView
             android:id="@+id/fun"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textColor="@color/yellow_400"
             android:gravity="center"
             android:layout_centerHorizontal="true"
             android:textSize="@dimen/basic_text_size_4"/>
    </LinearLayout>
    <TextView
        android:id="@+id/attr"
        android:layout_marginTop="180dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/white_transparency_700"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/basic_text_size_6"
        android:text="@string/permission_auto_proccess_attr"/>
    <ImageView
        android:id="@+id/bg_frame"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/open_additional_function_fixing_bg" />
    <ImageView
        android:id="@+id/bg_frame_1"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/open_additional_function_fixing_bg" />
    <ImageView
        android:id="@+id/frame"
        android:layout_marginBottom="130dp"
        android:layout_alignParentBottom="true"
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:layout_centerInParent="true" />


</RelativeLayout>