<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/permission_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_transparency_700">

    <LinearLayout
        android:id="@+id/permission_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/permission_row2"
        app:layout_constraintVertical_chainStyle="packed">

        <TextView
            android:id="@+id/permission_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="30dp"
            android:textColor="@color/white"
            android:textSize="@dimen/permission_two_step_layout_textsize"
            tools:ignore="DuplicateIds" />

        <ImageView
            android:id="@+id/permission_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            tools:ignore="DuplicateIds" />

        <ImageView
            android:id="@+id/permission_img_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            tools:ignore="DuplicateIds" />

        <ImageView
            android:id="@+id/gesture_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:src="@drawable/miui_hand_top"
            android:visibility="gone"
            tools:ignore="DuplicateIds" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/permission_row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/permission_row1"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/permission_row1"
        app:layout_constraintBottom_toTopOf="@+id/permission_row3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/permission_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="30dp"
            android:textColor="@color/white"
            android:textSize="@dimen/permission_two_step_layout_textsize"
            tools:ignore="DuplicateIds" />

        <ImageView
            android:id="@+id/permission_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            tools:ignore="DuplicateIds" />

        <ImageView
            android:id="@+id/permission_img_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            tools:ignore="DuplicateIds" />
        <ImageView
            android:id="@+id/gesture_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:src="@drawable/miui_hand_top"
            android:visibility="gone"
            tools:ignore="DuplicateIds" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/permission_row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/permission_row2"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/button_view"
        app:layout_constraintTop_toBottomOf="@id/permission_row2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/permission_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="30dp"
            android:textColor="@color/white"
            android:textSize="@dimen/permission_two_step_layout_textsize"
            tools:ignore="DuplicateIds" />

        <ImageView
            android:id="@+id/permission_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            tools:ignore="DuplicateIds" />

        <ImageView
            android:id="@+id/gesture_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:src="@drawable/miui_hand_top"
            android:visibility="gone"
            tools:ignore="DuplicateIds" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/button_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/permission_two_step_button"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/permission_auto_optimize_bg"
            android:gravity="center"
            android:text="去设置"
            android:textColor="@color/white"
            android:textSize="@dimen/basic_text_size_5" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>