<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_transparency_650" >

    <ImageView
        android:id="@+id/big_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/background_permission_animation_pic_margin_top"
        android:src="@drawable/miui678_background_permission_animation_pic_step_1"/>

    <ImageView
        android:id="@+id/gesture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/miui_hand_top"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:layout_below="@id/big_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/background_permission_animation_text_margin_top"
        android:textSize="@dimen/basic_text_size_5"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_marginTop="17dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/background_permission_animation_button_padding_h"
            android:paddingRight="@dimen/background_permission_animation_button_padding_h"
            android:paddingTop="@dimen/background_permission_animation_button_padding_v"
            android:paddingBottom="@dimen/background_permission_animation_button_padding_v"
            android:text="@string/background_permission_animation_button_1"
            android:textSize="@dimen/basic_text_size_5"
            android:textColor="@color/white"
            android:background="@drawable/background_permission_animation_button_bg"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/background_permission_animation_button_padding_h"
            android:paddingRight="@dimen/background_permission_animation_button_padding_h"
            android:paddingTop="@dimen/background_permission_animation_button_padding_v"
            android:paddingBottom="@dimen/background_permission_animation_button_padding_v"
            android:text="@string/background_permission_animation_button_2"
            android:textSize="@dimen/basic_text_size_5"
            android:textColor="@color/white"
            android:background="@drawable/background_permission_animation_button_bg"/>

    </LinearLayout>
</RelativeLayout>