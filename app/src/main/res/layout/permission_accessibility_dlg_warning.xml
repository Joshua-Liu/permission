<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="295dp"
    android:layout_height="365dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/auto_permission_guide_dlg_warning_title"
        android:textColor="@color/red_500"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="@string/auto_permission_guide_dlg_warning_content"
        android:textColor="#666666"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="132dp"
        android:layout_height="123dp"
        android:layout_below="@+id/content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/icon_warning" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/button_cancel"
            android:layout_width="109dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/auto_permission_dialog_button_white"
            android:gravity="center"
            android:text="放弃开启"
            android:textColor="#4d4d4d"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/button_ack"
            android:layout_width="109dp"
            android:layout_height="44dp"
            android:layout_alignTop="@+id/button_cancel"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/button_cancel"
            android:background="@drawable/auto_permission_dialog_button_green"
            android:gravity="center"
            android:text="一键开启"
            android:textColor="@color/green_500"
            android:textSize="15sp" />
    </RelativeLayout>


</RelativeLayout>