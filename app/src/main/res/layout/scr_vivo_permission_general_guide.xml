<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <android.by.com.permission.layout.FuncBarSecondaryView
        android:id="@+id/funcbar_secondary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/funcbar_height" />

    <ScrollView
        android:layout_below="@id/funcbar_secondary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/guide_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/btn"
                android:layout_below="@id/guide_pic"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/xiaomi_button_blue_bg"
                android:text="@string/vivo_permission_setting"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/basic_text_size_5"
                />

        </RelativeLayout>



    </ScrollView>
</RelativeLayout>